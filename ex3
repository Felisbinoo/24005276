#include <stdio.h>

int main() {
    char nome[100];
    int idade;
    int dias_de_vida;

    printf("Digite seu nome: ");
    scanf("%s", &nome);

    printf("Digite sua idade: ");
    scanf("%d", &idade);

    dias_de_vida = idade * 365;
    printf("%s tem aproximadamente %d dias de vida.\n", nome, dias_de_vida);

    return 0;
}
