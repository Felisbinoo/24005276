#include <stdio.h>
#include <locale.h>
int main ()
{
 setlocale(LC_ALL,"portuguese");
 int VTurno1, VTurno2, Visitantes_no_dia;

 printf("\n\nNúmero de visitantes no primeiro turno: ");
 scanf("%d",&VTurno1);
 printf("\n\nNúmero de visitantes no segundo turno: ");
 scanf("%d",&VTurno2);
 Visitantes_no_dia = VTurno1 + VTurno2;
 printf("\n\nVisitantes no dia: %d \n\n",Visitantes_no_dia);
return (0);
}

