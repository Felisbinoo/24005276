#include <stdio.h>
#include <locale.h>

int main() {
    setlocale(LC_ALL, "Portuguese");
    int total, notas_100, notas_50, notas_10, notas_5, notas_1;
    
    printf("Digite o valor total em reais: ");
    scanf("%d", &total);

    notas_100 = total / 100;
    total = total % 100;

    notas_50 = total / 50;
    total = total % 50;

    notas_10 = total / 10;
    total = total % 10;

    notas_5 = total / 5;
    total = total % 5;

    notas_1 = total;

    printf("Notas necess√°rias:\n");
    printf("Notas de 100 reais: %d\n", notas_100);
    printf("Notas de 50 reais: %d\n", notas_50);
    printf("Notas de 10 reais: %d\n", notas_10);
    printf("Notas de 5 reais: %d\n", notas_5);
    printf("Notas de 1 real: %d\n", notas_1);

    return 0;
}
